<% if items.any? %>
    <div>
      <h2>
        <p>購入品数：<%= count_items %></p>
        <p>購入総額：<%= sum_prices %></p>
      </h2>
    </div>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>購入日</th>
          <th>品目名</th>
          <th>金額</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>
      <tbody>
        <% items.each do |item| %>
          <tr>
            <td><%= item.purchase_date %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <% if current_user == item.user %>
              <td><%= link_to "Edit", edit_item_path(item), class: 'btn btn-warning btn-sm' %></td>
              <td><%= link_to "Delete", item, method: :delete, data: { confirm: "削除しますか？" }, class: 'btn btn-danger btn-sm' %></td>
            <% end %>
          </tr>
          <% end %>
      </tbody>
    </table>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>