<div class="bg-light">
  <h1>編集ページ</h1>
  <%= form_with(model: @item) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <p><label for="item_purchase_date_1i">購入日:</label></p>
    <p><%= f.date_select :purchase_date, use_month_numbers: true, date_separator: '/', class: 'form-control'%></p>
    <p><%= f.label :name,'品目名:' %></p>
    <p><%= f.text_field :name, class: 'form-control'%></p>
    <p><%= f.label :price,'金額:' %></p>
    <p><%= f.number_field :price, class: 'form-control'%></p>
    <%= f.submit '更新' %>
  <% end %>
</div>